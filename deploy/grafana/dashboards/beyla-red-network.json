{
  "uid": "beyla-red-network",
  "title": "Beyla RED + Network",
  "tags": ["smart-address", "beyla", "red"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "type": "timeseries",
      "title": "HTTP requests/s (service)",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "sum(rate(http_server_request_duration_seconds_count{service_name=\"smart-address-service\"}[5m]))",
          "legendFormat": "requests/s",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": {}, "overrides": [] },
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 0 }
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "HTTP p95 latency (service)",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le) (rate(http_server_request_duration_seconds_bucket{service_name=\"smart-address-service\"}[5m])))",
          "legendFormat": "p95",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "s" }, "overrides": [] },
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 0 }
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "HTTP 5xx errors/s (service)",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "sum(rate(http_server_request_duration_seconds_count{service_name=\"smart-address-service\",http_response_status_code=~\"5..\"}[5m])) or vector(0)",
          "legendFormat": "5xx",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": {}, "overrides": [] },
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 0 }
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "Network bytes/s (Beyla)",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "sum by (direction) (rate(beyla_network_flow_bytes_total[5m]))",
          "legendFormat": "{{direction}}",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "Bps" }, "overrides": [] },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 }
    },
    {
      "id": 5,
      "type": "stat",
      "title": "Instrumented processes (Beyla)",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "sum(beyla_instrumented_processes)",
          "legendFormat": "processes",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": {}, "overrides": [] },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "values": false },
        "orientation": "horizontal"
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 }
    }
  ]
}
