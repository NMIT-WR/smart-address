{
  "name": "smart-address-workspace",
  "private": true,
  "packageManager": "pnpm@10.26.2",
  "scripts": {
    "prepare": "effect-language-service patch",
    "build": "pnpm -r --filter ./packages/* run build",
    "typecheck": "pnpm -r --filter \"./packages/*\" --filter \"./apps/*\" run typecheck",
    "check": "ultracite check",
    "check:publint": "pnpm -r --filter ./packages/* run publint",
    "check:tree": "pnpm -r --filter ./packages/* run tree-shake",
    "fix": "ultracite fix",
    "test": "bun test",
    "test:watch": "bun test --watch"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@effect/language-service": "catalog:tooling",
    "typescript": "catalog:types",
    "ultracite": "6.5.0"
  }
}
