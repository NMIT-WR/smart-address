{
  "name": "smart-address-workspace",
  "private": true,
  "packageManager": "pnpm@10.26.2",
  "scripts": {
    "prepare": "effect-language-service patch && lefthook install",
    "build": "pnpm -r --filter \"./packages/*\" run build",
    "typecheck": "pnpm -r --filter \"./packages/*\" --filter \"./apps/*\" run typecheck",
    "check": "ultracite check",
    "check:publint": "pnpm -r --filter ./packages/* run publint",
    "check:tree": "pnpm -r --filter ./packages/* run tree-shake",
    "fix": "ultracite fix",
    "check:jscpd": "jscpd -l 5 -k 50 -r console -p \"**/*.{ts,tsx,js,jsx}\" -i \"**/{dist,build,coverage,node_modules,.turbo,.next}/**\" --gitignore apps packages",
    "check:knip": "knip",
    "check:quality": "pnpm check:jscpd && pnpm check:knip",
    "test": "bun test",
    "test:watch": "bun test --watch"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@effect/language-service": "catalog:tooling",
    "lefthook": "^2.0.13",
    "jscpd": "^4.0.5",
    "knip": "^5.79.0",
    "typescript": "catalog:types",
    "ultracite": "6.5.0"
  }
}
